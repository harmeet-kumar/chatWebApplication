{{!-- The template for showing all quizzes --}}
<style>
    #divNoticesTemplate li {
        list-style-type: none;
    }

</style>

<div id="divNoticesTemplate">
<h1>Issues Page</h1>



<table id="tblIssues" class="table table-hover table-bordered">
			<tr>
				<th>
					Title
				</th>
                <th>
					Description
				</th>
				<th>
					Priority
				</th>
				<th>
					Assigned to
				</th>
                <th>
					Status
				</th>
                <th>
					Actions
				</th>
			</tr>
            
                {{#each .}}
                <tr notice-id="{{Id}}">
                    <td info='title'>{{title}}</td>
                    <td info='desc'>{{desc}}</td>
                    <td info='priority'>{{priority}}</td>
                    <td info='assign'>{{assign}}</td>
                    <td info='status'>{{status}}</td>
                    <td><a action='edit' href="#">Edit</a> | <a action='delete' href="#">Delete</a></td>
                  </tr>  
                {{/each}}
         
		</table>
       





     


    <button id="btnCreate" type="button" class="btn btn-primary">Create Issue</button>

    <div id="issueModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header"> 
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 id="modalTitle" class="modal-title">Edit Issue</h4>
      </div>
      <div class="modal-body">
        	<div class="form-horizontal">
			  <div class="form-group">
			    <label for="txtIssueTitle" class="col-sm-3 control-label">Title*</label>
			    <div class="col-sm-9">
			      <input type="text" class="form-control" id="txtIssueTitle" placeholder="Title">
			    </div>
			  </div>
              
              	  <div class="form-group">
			    <label for="txtDescription" class="col-sm-3 control-label">Description*</label>
			    <div class="col-sm-9">
			    	<textarea id="txtDescription" class="form-control" rows="3" > </textarea>
			    </div>
			  </div>
               <div class="dropdown">
                    <label for="tblPriority" class="col-sm-3 control-label">Priority*</label>   
                  <select id="tblPriority">
                        <option value="Normal">Normal</option>
                        <option value="Immediate">Immediate</option>
                        <option value="Urgent">Urgent</option>
                       
                  </select>
                </div>
		
			</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button id="btnSave" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

</div>